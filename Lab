verbs[15] = new verb("defenestrate", "defenestrated", "defenestrating");

function shuffle (words) {
  var currentIndex = verbs.length, temporaryValue, randomIndex;

  // While there remain elements to shuffle...
  while (0 !== currentIndex) {

    // Pick a remaining element...
    randomIndex = Math.floor(Math.random() * currentIndex);
    currentIndex -= 1;

    // And swap it with the current element.
    temporaryValue = verbs[currentIndex];
    verbs[currentIndex] = verbs[randomIndex];
    verbs[randomIndex] = temporaryValue;
  }

}
//gets a number between 1 and 6
function random1to6() {
    var number = 10;
    while (number > 6) {
number = Math.floor((Math.random() * 10) + 1);
}
return number;
}

function shuffleAll () {
    shuffle(verbs);
    shuffle(nouns);
}

function sentence (subj, verb, DO, tense, personAndNumber) {
    
    this.subject = subject;
    this.verb = verb;
    this.DO = DO;
    this.tense = tense;
    this.personAndNumber = personAndNumber;
    
    //this part will eventually be its own object
    var article = "The";
    var verb1 = verb.thirdPersonSingular;
    var subject = subj.singular;
    var directObject = DO.singular;
    
    if (tense === "present") {
    switch (personAndNumber) {
    case 1:
        verb1 = verb.firstPersonSingular;
        article = "";
        subject = "I";
        break;
    case 2:
       verb1 = verb.firstPersonSingular;
       article = "";
       subject = "You";
