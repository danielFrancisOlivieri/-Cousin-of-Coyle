
function noun (sing) {
    
    this.singular = sing;
    this.plural = sing + "s";
    this.name = sing;
}

nouns = [];

nouns[0] = new noun("cat");
nouns[1] = new noun("dog");
nouns[2] = new noun("house");
nouns[3] = new noun("mouse");
nouns[4] = new noun("real estate agent");
nouns[5] = new noun("dude");
nouns[6] = new noun("drug");
nouns[7] = new noun("sword");
nouns[8] = new noun("hero");
nouns[9] = new noun("gun");


function verb(fps, pp, g) {
    
    this.infinitive = "to " + fps;
    this.firstPersonSingular = fps;
    this.secondPersonSingular = fps;
    this.thirdPersonSingular = fps + "s";
    this.firstPersonPlural = fps;
    this.secondPersonPlural = fps;
    this.thirdPersonPlural = fps;
    
    
  // this.forPP = pp;
    
    //yes, I'm awful and don't know the difference between gerunds and gerundives
    //not all pluperfects use the pp (it's had written not had wrote)
    this.gerund = g;
    this.pastParticiple = pp;
   this.name = fps;
   
   this.futureTense = "will " + this.firstPersonSingular;
   
   /*
   this.getPluperfect = function (word) {
       
           this.forPP = word;
   };
   **/
   
   this.pluperfect = "had " + pp;
   this.alternateConstructor = function (i, fps, sps, tps, fpp, spp, tpp) {
    this.infinitive = i;
    this.firstPersonSingular = fps;
    this.secondPersonSingular = sps;
    this.thirdPersonSingular = tps;
    this.firstPersonPlural = fpp;
    this.secondPersonPlural = spp;
    this.thirdPersonPlural = tpp;
   
   this.name = fps;
   
  
};
    
}
verbs = [];
var walk = new verb("to walk", "walked", "walking");
var run = new verb("run", "ran", "running");
var write = new verb("write", "wrote", "writing");
var like = new verb("like", "liked", "liking");
var eat = new verb("eat", "ate", "eating");
var bite = new verb("bite", "bit", "biting");
var grab = new verb("grab", "grabbed", "grabbing");

verbs[0] = new verb("walk", "walked", "walking");
verbs[1] = new verb("run", "ran", "running");
