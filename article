// an or A

function anOrA(word) {
  var firstLetter = word.charAt(0);
  var anOrAVar = "a";
  if ((firstLetter == "a") || (firstLetter == "i") || (firstLetter == "o") || (firstLetter == "e") || (firstLetter == "u") || (firstLetter == "y")) 
  {
    anOrAVar = "an";
  }
  return anOrAVar;
}
