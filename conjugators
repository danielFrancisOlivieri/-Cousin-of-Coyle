// conjgates verbs
function verbConjugator (verb, tense, personAndNumber) {
    var verb1 = verb;
    var article = "";
    var subject = "";
   if (tense === 1) {
    switch (personAndNumber) {
    case 1:
        verb1 = verb.firstPersonSingular;
        article = "";
        subject = "I";
        break;
    case 2:
       verb1 = verb.firstPersonSingular;
       article = "";
       subject = "You";
        break;
    case 3:
        verb1 = verb.thirdPersonSingular;
        break;
    case 4:
        verb1 = verb.firstPersonSingular;
        subject = "We";
        article = "";
        break;
    case 5:
        verb1 = verb.firstPersonSingular;
        article = "";
       subject = "You";
        break;
    case 6:
        verb1 = verb.firstPersonSingular;
        subject = subj.plural;
    }
    }
    
//future
    if(tense === 2) {
        
        verb1 = verb.futureTense;
          switch (personAndNumber) {
    case 1:
       
        article = "";
        subject = "I";
        break;
    case 2:
      
       article = "";
       subject = "You";
        break;
    case 3:
       
        break;
    case 4:
       
        subject = "We";
        article = "";
        break;
    case 5:
       
        article = "";
       subject = "Ya'll";
        break;
    case 6:
        
        subject = subj.plural;
    }
        
        
    }
    
//imperfect
     if(tense === 3) {
        
       
          switch (personAndNumber) {
    case 1:
       verb1 = "was " + verb.gerund;
        article = "";
        subject = "I";
        break;
    case 2:
      verb1 = "were " + verb.gerund;
       article = "";
       subject = "You";
        break;
    case 3:
        verb1 = "was " + verb.gerund;
        break;
    case 4:
        verb1 = "were " + verb.gerund;
        subject = "We";
        article = "";
        break;
    case 5:
        verb1 = "were " + verb.gerund;
        article = "";
       subject = "Ya'll";
        break;
    case 6:
         verb1 = "were " + verb.gerund;
        subject = subj.plural;
    }
    
     }
     //here
     //past tense
    if(tense === 4) {
        verb1 =  verb.pastParticiple;
     
          switch (personAndNumber) {
              
    case 1:
       
        article = "";
        subject = "I";
        break;
    case 2:
      
       article = "";
       subject = "You";
        break;
    case 3:
        
        break;
    case 4:
       
        subject = "We";
        article = "";
        break;
    case 5:
       
        article = "";
       subject = "Ya'll";
        break;
    case 6:
        
        subject = subj.plural;
    }
        
        
    }
    return verb1;
    }

   //end
   
   //conjugates articles
   function articleConjugator (tense, personAndNumber) {
